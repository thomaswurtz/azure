{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
		"location": {
			"type": "string",
			"defaultValue": "[resourceGroup().location]",
			"metadata": {
				"description": "Location for resources to be created. Must be same as the App Service Plan location"
			}
		},
        "appServicePlanName": {
            "type": "string",
            "defaultValue": "plan",
			"metadata": {
                "description": "App Service Plan to host the App Services in"
            }
        },
        "appServicePlanResourceGroup": {
            "type": "string",
            "defaultValue": "plan-rg",
			"metadata": {
                "description": "Resource group of the specified App Service Plan"
            }
        },
        "appInsightsName": {
            "type": "string",
            "defaultValue": "tenantname-appinsights",
            "metadata": {
                "description": "Name of the Application Insights Service used by both the Customer Interaction API and Web"
            }
        },
        "appServiceNameApi": {
            "type": "string",
            "defaultValue": "tenantname-ci-api",
            "metadata": {
                "description": "Name of the App Service for the Customer Interaction API"
            }
        },
        "appServiceNameWeb": {
            "type": "string",
            "defaultValue": "tenantname-ci-web",
            "metadata": {
                "description": "Name of the App Service for the Customer Interaction Web"
            }
        },
        "nodeVersion": {
            "type": "string",
            "defaultValue": "8.9.4",
            "metadata": {
                "description": "Node version of the Customer Interaction Web"
            }
        },
        "storageAccountName": {
            "type": "string",
            "defaultValue": "tenantnamestorage",
            "metadata": {
                "description": "Storage account used by the Customer Interaction API, must be lower case"
            }
        },
        "storageAccountType": {
            "type": "string",
            "defaultValue": "Standard_ZRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_ZRS",
                "Standard_GRS",
                "Standard_RAGRS",
                "Premium_LRS"
            ]
        }
    },
    "resources": [
        {
            "apiVersion": "2018-02-01",
            "name": "[parameters('appServiceNameApi')]",
            "type": "Microsoft.Web/sites",
            "location": "[parameters('location')]",
            "tags": {},
            "dependsOn": [
                "[concat('Microsoft.Storage/storageAccounts/', parameters('storageAccountName'))]",
                "[concat('microsoft.insights/components/', parameters('appInsightsName'))]"
            ],
            "properties": {
                "name": "[parameters('appServiceNameApi')]",
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                            "value": "[reference(concat('microsoft.insights/components/', parameters('appInsightsName')), '2015-05-01').InstrumentationKey]"
                        },
                        {
                            "name": "ApplicationInsightsAgent_EXTENSION_VERSION",
                            "value": "~2"
                        },
                        {
                            "name": "XDT_MicrosoftApplicationInsights_Mode",
                            "value": "default"
                        },
                        {
                            "name": "DiagnosticServices_EXTENSION_VERSION",
                            "value": "disabled"
                        },
                        {
                            "name": "APPINSIGHTS_PROFILERFEATURE_VERSION",
                            "value": "disabled"
                        },
                        {
                            "name": "APPINSIGHTS_SNAPSHOTFEATURE_VERSION",
                            "value": "disabled"
                        },
                        {
                            "name": "InstrumentationEngine_EXTENSION_VERSION",
                            "value": "disabled"
                        },
                        {
                            "name": "SnapshotDebugger_EXTENSION_VERSION",
                            "value": "disabled"
                        },
                        {
                            "name": "XDT_MicrosoftApplicationInsights_BaseExtensions",
                            "value": "disabled"
                        }
                    ],
                    "metadata": [
                        {
                            "name": "CURRENT_STACK",
                            "value": "dotnetcore"
                        }
                    ],
                    "webSocketsEnabled": true,
                    "alwaysOn": true
                },
                "serverFarmId": "[concat('/subscriptions/', subscription().subscriptionId,'/resourcegroups/', parameters('appServicePlanResourceGroup'), '/providers/Microsoft.Web/serverfarms/', parameters('appServicePlanName'))]",
                "hostingEnvironment": "[variables('hostingEnvironment')]",
                "clientAffinityEnabled": true,
                "httpsOnly": true
            }
        },
        {
            "apiVersion": "2015-05-01",
            "name": "[parameters('appInsightsName')]",
            "type": "microsoft.insights/components",
            "location": "[parameters('location')]",
            "properties": {
                "ApplicationId": "[parameters('appServiceNameApi')]",
                "Request_Source": "IbizaWebAppExtensionCreate"
            }
        },
        {
            "name": "[parameters('storageAccountName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "location": "[parameters('location')]",
            "apiVersion": "2019-04-01",
            "dependsOn": [],
            "kind": "StorageV2",
            "sku": {
                "name": "[parameters('storageAccountType')]"
            },
            "properties": {
                "accessTier": "Hot",
                "supportsHttpsTrafficOnly": true
            }
        },
        {
            "apiVersion": "2018-02-01",
            "name": "[parameters('appServiceNameWeb')]",
            "type": "Microsoft.Web/sites",
            "location": "[parameters('location')]",
            "tags": {},
            "dependsOn": [
                "[concat('microsoft.insights/components/', parameters('appInsightsName'))]"
            ],
            "properties": {
                "name": "[parameters('appServiceNameWeb')]",
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                            "value": "[reference(concat('microsoft.insights/components/', parameters('appInsightsName')), '2015-05-01').InstrumentationKey]"
                        },
                        {
                            "name": "ApplicationInsightsAgent_EXTENSION_VERSION",
                            "value": "~2"
                        },
                        {
                            "name": "XDT_MicrosoftApplicationInsights_Mode",
                            "value": "default"
                        },
                        {
                            "name": "DiagnosticServices_EXTENSION_VERSION",
                            "value": "disabled"
                        },
                        {
                            "name": "APPINSIGHTS_PROFILERFEATURE_VERSION",
                            "value": "disabled"
                        },
                        {
                            "name": "APPINSIGHTS_SNAPSHOTFEATURE_VERSION",
                            "value": "disabled"
                        },
                        {
                            "name": "InstrumentationEngine_EXTENSION_VERSION",
                            "value": "disabled"
                        },
                        {
                            "name": "SnapshotDebugger_EXTENSION_VERSION",
                            "value": "disabled"
                        },
                        {
                            "name": "XDT_MicrosoftApplicationInsights_BaseExtensions",
                            "value": "disabled"
                        },
                        {
                            "name": "WEBSITE_NODE_DEFAULT_VERSION",
                            "value": "[parameters('nodeVersion')]"
                        }
                    ],
                    "metadata": [
                        {
                            "name": "CURRENT_STACK",
                            "value": "node"
                        }
                    ],
                    "nodeVersion": "[parameters('nodeVersion')]",
                    "alwaysOn": true
                },
                "serverFarmId": "[concat('/subscriptions/', subscription().subscriptionId,'/resourcegroups/', parameters('appServicePlanResourceGroup'), '/providers/Microsoft.Web/serverfarms/', parameters('appServicePlanName'))]",
                "hostingEnvironment": "[variables('hostingEnvironment')]",
                "clientAffinityEnabled": true,
                "httpsOnly": true
            }
        }
    ],
    "variables": {
        "hostingEnvironment": ""
    }
}
